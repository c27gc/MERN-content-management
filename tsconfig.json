{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDirs": ["app/server", "app/client"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@server/*": ["app/server/src/*"],
      "@client/*": ["app/client/src/*"]
    }
  },
  "include": [
    "app/server/src/**/*.ts",
    "app/client/src/**/*.ts",
    "app/client/src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
